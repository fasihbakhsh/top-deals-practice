<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsScreen"
    android:background="?android:attr/selectableItemBackground">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/main_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/purple_500"
        android:elevation="4dp"
        android:theme="@style/AppTheme"
        app:titleTextColor="@color/white" />

    <Button
        android:id="@+id/privacy_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/main_toolbar"
        android:background="@color/white"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:text="@string/privacy_policy"
        android:textAlignment="textStart"
        android:textAllCaps="false"
        android:textColor="@color/black" />

    <View
        android:id="@+id/dividerOne"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/privacy_button"
        android:background="#000000"
        android:visibility="visible" />

    <Button
        android:id="@+id/feedback_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dividerOne"
        android:background="@color/white"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:text="@string/provide_feedback"
        android:textAlignment="textStart"
        android:textAllCaps="false"
        android:textColor="@color/black" />

    <View
        android:id="@+id/dividerTwo"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/feedback_button"
        android:background="#000000"
        android:visibility="visible" />


    <Button
        android:id="@+id/app_rate_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dividerTwo"
        android:background="@color/white"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:text="@string/app_rating"
        android:textAlignment="textStart"
        android:textAllCaps="false"
        android:textColor="@color/black"/>

    <View
        android:id="@+id/dividerThree"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/app_rate_button"
        android:background="#000000"
        android:visibility="visible" />

</RelativeLayout>